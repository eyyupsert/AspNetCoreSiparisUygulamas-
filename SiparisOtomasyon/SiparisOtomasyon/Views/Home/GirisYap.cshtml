@model SiparisOtomasyon.Models.KullaniciGirisModel
<form asp-action="GirisYap" method="post" class="p-4 w-50 mx-auto shadow">
    <div class="form-group">
        <label>Kullanıcı Ad:</label><br />
        <span asp-validation-for="@Model.KullaiciAd" class="text-danger"></span>
        <input type="text" asp-for="@Model.KullaiciAd" class="form-control" />
    </div>
    <div class="form-group mt-2">
        <label>Şifre:</label> <br />
        <span asp-validation-for="@Model.Sifre" class="text-danger"></span>
        <input type="password" asp-for="@Model.Sifre" class="form-control" />
    </div>
    <div class="form-check mt-2">
        <input type="checkbox" asp-for="@Model.BeniHatirla" class="form-check-input" />
        <label asp-for="BeniHatirla" class="form-check-label">Beni Hatırla</label>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger" ></div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary d-md-block">Giris Yap</button>
    </div>
    
</form>


@section JavaScript{ 
    <script src="~/jqueryValid/jquery.validate.min.js"></script>
    <script src="~/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}